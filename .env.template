# Django core settings
DJANGO_SECRET_KEY=your-secret-key-here
DEBUG=True

# Allowed hosts (comma-separated)
ALLOWED_HOSTS=your-domain.com,localhost
CSRF_TRUSTED_ORIGINS=https://your-domain.com,http://localhost

# Database connection
DATABASE_URL=postgresql://username:password@hostname:port/dbname

# Email settings
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=your-smtp-host.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@example.com
EMAIL_HOST_PASSWORD=your-email-password

# Django sites framework & Allauth
SITE_ID=1
DOMAIN=your-site-domain.com
SITE_NAME=CommuniTea Gaming

# Optional integrations
RECAPTCHA_SITE_KEY=your-recaptcha-public-key
RECAPTCHA_SECRET_KEY=your-recaptcha-private-key
STRIPE_PUBLIC_KEY=your-stripe-public-key
STRIPE_SECRET_KEY=your-stripe-secret-key

# Timezone override
DJANGO_TIME_ZONE=Europe/London